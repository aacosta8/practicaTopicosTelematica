<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

<h2>Registrarse</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= label_tag(:email,  "Correo electrónico") %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Contraseña") %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag(:password_confirmation, "Repita la contraseña") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Registrarse", class:"btn red"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
